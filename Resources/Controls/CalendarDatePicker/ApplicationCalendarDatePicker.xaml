                                                            <VisualState.Setters>

                                                                <Setter 
                                                                    Target="Text.Foreground"
                                                                    Value="{ThemeResource CalendarViewNavigationButtonForegroundPressed}"
                                                                />

                                                            </VisualState.Setters>

                                                        </VisualState>

                                                        <VisualState
                                                            x:Name="Disabled"
