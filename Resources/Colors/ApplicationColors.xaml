    <LinearGradientBrush
        StartPoint="0, 0"
        x:Key="AddDataFormTopBorderBackgroundBrush"
        EndPoint="0, 1">

        <GradientStop 
            Offset="0.6" 
            Color="{StaticResource WhiteColor}" 
        />
                            
        <GradientStop 
            Offset="1" 
            Color="{StaticResource TransparentColor}" 
        />

    </LinearGradientBrush>
        
    <LinearGradientBrush
        x:Key="AddDataFormBottomBoderBackgroundBrush"
