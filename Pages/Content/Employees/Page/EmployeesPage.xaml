<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Record_System.Pages.Content.Employees.Page.EmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Record_System.Pages.Content.Employees.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:system="using:System"
    xmlns:data="using:Record_System.BackEnd.Data"
    xmlns:doubleToCurrence="using:Record_System.BackEnd.Converters.DoubleToCurrency"
    xmlns:boolToVisibility="using:Record_System.BackEnd.Converters.BoolToVisibility"
    xmlns:dateTimeToDisplayDateTime="using:Record_System.BackEnd.Converters.DateTimeToDisplayDateTime"
    Background="{StaticResource TransparentColor}">

    <Page.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/TextBoxes/SearchTextBox.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/TextBoxes/FormsTextBox.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/NumberBoxes/FormsNumberBox.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/NumberBoxes/ReadOnlyFormsNumberBox.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/AutoSuggestBoxes/FormsAutoSuggestBox.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/CalendarDatePicker/ApplicationCalendarDatePicker.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/FlipViews/AddNewEmployeeFormFlipView.xaml"
                />

                <ResourceDictionary
                    Source="ms-appx:///Resources/Controls/GridViewItem/EmployeesGridViewItemTheme.xaml"
                />

            </ResourceDictionary.MergedDictionaries>

            <doubleToCurrence:DoubleToCurrencyConverter
                x:Key="DoubleToCurrencyConverter"
            />

            <dateTimeToDisplayDateTime:DateTimeToDisplayDateTimeConverter
                x:Key="DateTimeToDisplayDateTimeConverter"
            />

            <boolToVisibility:BoolToVisibilityConverter
                x:Key="BoolToVisibilityConverter"
            />

            <boolToVisibility:NegatedBoolToVisibilityConverter
                x:Key="NegatedBoolToVisibilityConverter"
            />

        </ResourceDictionary>

    </Page.Resources>

    <SplitView
        x:Name="bottomPaneSplitView">

        <SplitView.Resources>

            <ResourceDictionary
                Source="ms-appx:///Resources/Controls/SplitViews/BottomPaneSplitView.xaml"
            />

        </SplitView.Resources>

        <SplitView.Pane>

            <Grid
                VerticalAlignment="Center"
                Margin="0 32">

                <Grid.Resources>

                    <ResourceDictionary>

                        <ResourceDictionary.MergedDictionaries>

                        </ResourceDictionary.MergedDictionaries>

                        <Style
                            TargetType="TextBox"
                            BasedOn="{StaticResource FormsTextBoxStyle}"
                        />

                        <Style
                            TargetType="AutoSuggestBox"
                            BasedOn="{StaticResource FormsAutoSuggestBoxStyle}"
                        />

                        <Style
                            TargetType="NumberBox"
                            BasedOn="{StaticResource FormsNumberBoxStyle}"
                        />

                    </ResourceDictionary>

                </Grid.Resources>

                <Grid.RowDefinitions>

                    <RowDefinition
                        Height="Auto"
                    />

                    <RowDefinition
                        Height="*"
                    />

                    <RowDefinition
                        Height="Auto"
                    />

                </Grid.RowDefinitions>

                <ScrollViewer
                    Style="{StaticResource AddDataFormScrollViewerStyle}"
                    Grid.RowSpan="3">

                    <Grid>

                        <StackPanel
                            Style="{StaticResource FormStackPanelStyle}">

                            <Grid
                                HorizontalAlignment="Center">

                                <Grid
                                    CornerRadius="60"
                                    Width="140"
                                    Height="140"
                                    HorizontalAlignment="Center"
                                    Background="{StaticResource BlackColor10}">

                                    <FontIcon
                                        Glyph="&#xEB06;"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SystemFluentIcons}"
                                        FontSize="118"
                                        Foreground="{StaticResource BlackColor}"
                                    />

                                    <Image
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Stretch="UniformToFill"
                                        Source="{x:Bind viewModel.NewEmployee.ProfilePictureDownloadUrl, Mode=OneWay}"
                                    />

                                </Grid>

                                <Button
                                    Width="40"
                                    Height="40"
                                    Padding="7"
                                    CornerRadius="16"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Click="ChangeProfilePicture_Click">

                                    <Button.Resources>

                                        <ResourceDictionary
                                            Source="ms-appx:///Resources/Controls/Buttons/ChangePictureButtonTheme.xaml"
                                        />

                                    </Button.Resources>

                                    <Button.Content>

                                        <FontIcon
                                            Glyph="&#xE6E4;"
                                            FontSize="22"
                                        />

                                    </Button.Content>

                                </Button>

                            </Grid>

                            <TextBox
                                Header="Full Name"
                                Text="{x:Bind viewModel.NewEmployee.FullName, Mode=TwoWay}"
                            />

                            <NumberBox
                                GettingFocus="NumberInput_GettingFocus"
                                LostFocus="NumberInput_LostFocus"
                                Value="{x:Bind viewModel.NewEmployee.SalaryPerMonth, Mode=TwoWay}"
                                Header="Salary Per Month"
                            />

                            <CalendarDatePicker
                                Style="{StaticResource ApplicationCalendarDatePicker}"
                                Header="Date Joined"
                                FontSize="14"
                                FontFamily="{StaticResource DMMonoMedium}"
                                PlaceholderText=""
                                MaxDate="{x:Bind system:DateTimeOffset.Now}"
                                DateFormat="{}{month.full} {day.integer}, {year.full}"
                                Date="{x:Bind viewModel.NewEmployee.DateJoined, Mode=TwoWay}"
                            />

                            <Grid
                                Grid.Row="1"
                                ColumnSpacing="40">

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition
                                        Width="*"
                                    />

                                    <ColumnDefinition
                                        Width="*"
                                    />

                                </Grid.ColumnDefinitions>

                                <TextBox
                                    Header="E-mail"
                                    Text="{x:Bind viewModel.NewEmployee.Email, Mode=TwoWay}"
                                />


                                <TextBox
                                    Grid.Column="1"
                                    Header="Phone Number"
                                    Text="{x:Bind viewModel.NewEmployee.PhoneNumber, Mode=TwoWay}"
                                />

                            </Grid>

                            <TextBox
                                Header="Location"
                                Text="{x:Bind viewModel.NewEmployee.Location, Mode=TwoWay}"
                            />

                            <CalendarDatePicker
                                Style="{StaticResource ApplicationCalendarDatePicker}"
                                Header="Birth Date"
                                FontSize="14"
                                FontFamily="{StaticResource DMMonoMedium}"
                                PlaceholderText=""
                                MaxDate="{x:Bind system:DateTimeOffset.Now}"
                                DateFormat="{}{month.full} {day.integer}, {year.full}"
                                Date="{x:Bind viewModel.NewEmployee.BirthDate, Mode=TwoWay}"
                            />

                        </StackPanel>

                    </Grid>

                </ScrollViewer>

                <Border
                    VerticalAlignment="Top"
                    Style="{StaticResource AddDataFormTopBoderStyle}">

                    <Grid
                        Style="{StaticResource AddDataFormTopGridStyle}">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition
                                Width="*"
                            />

                            <ColumnDefinition
                                Width="Auto"
                            />

                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Visibility="{x:Bind viewModel.IsEdit, Converter={StaticResource NegatedBoolToVisibilityConverter}, Mode=OneWay}"
                            Style="{StaticResource AddDataFormTitleStackPanelStyle}">

                            <FontIcon
                                Glyph="&#xE00A;"
                                Style="{StaticResource AddDataFormTitleFontIconStyle}"
                            />

                            <TextBlock
                                Style="{StaticResource AddDataFormTitleTextBlockStyle}"
                                Text="New Employee"
                            />

                        </StackPanel>

                        <TextBlock
                            Visibility="{x:Bind viewModel.IsEdit, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                            Style="{StaticResource AddDataFormTitleTextBlockStyle}"
                            Text="Edit Employee"
                        />

                        <Button
                            Grid.Column="1"
                            Click="Close_BottomPane"
                            VerticalAlignment="Center">

                            <Button.Resources>

                                <ResourceDictionary
                                    Source="ms-appx:///Resources/Controls/Buttons/ClosePaneButtonTheme.xaml"
                                />

                            </Button.Resources>

                            <Button.Content>

                                <FontIcon
                                    Glyph="&#xE59F;"
                                    FontSize="16"
                                    FontFamily="{StaticResource SystemFluentIcons}"
                                />

                            </Button.Content>

                        </Button>

                    </Grid>

                </Border>

                <Border
                    Grid.Row="2"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource AddDataFormBottomBoderStyle}">

                    <Grid
                        Style="{StaticResource AddDataFormBottomGridStyle}">

                        <Button
                            Grid.Column="1"
                            Style="{StaticResource AddDataFormDoneButtonStyle}"
                            Click="Add_NewEmployee"
                            IsEnabled="{x:Bind viewModel.NewEmployee.CanAdd, Mode=OneWay}"
                            Content="Done">

                            <Button.Resources>

                                <ResourceDictionary
                                    Source="ms-appx:///Resources/Controls/Buttons/BlackBackgroundTextIconButtonTheme.xaml"
                                />

                            </Button.Resources>

                        </Button>

                    </Grid>

                </Border>

            </Grid>

        </SplitView.Pane>

        <SplitView.Content>

            <Grid>

                <Grid.RowDefinitions>

