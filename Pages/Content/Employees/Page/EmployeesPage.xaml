                                MaxWidth="400"
                            />

                            <ColumnDefinition
                                Width="*"
                                
                            />

                            <ColumnDefinition
                                Width="Auto"
                            />

                        </Grid.ColumnDefinitions>

                        <TextBox
                            PlaceholderText="Search Employee"
                            Style="{StaticResource SearchTextBoxStyle}"
                        />

                        <StackPanel
                            Style="{StaticResource DataPageActionButtonsStackPanelStyle}"
                            Grid.Column="2">

                            <Button
                                IsEnabled="{x:Bind viewModel.CanDeleteEmployees, Mode=OneWay}"
                                Click="Delete_SelectedEmployees"
                                Padding="14 10">

                                <Button.Resources>

                                    <ResourceDictionary
                                        Source="ms-appx:///Resources/Controls/Buttons/ClearFormButtonTheme.xaml"
                                    />

                                </Button.Resources>

                                <Button.Content>

                                    <FontIcon
                                        Glyph="&#xE555;"
                                        FontSize="14"
                                        FontFamily="{StaticResource SystemFluentIcons}"
                                    />

                                </Button.Content>

                            </Button>

                            <Button
                                Click="Open_BottomPane"
                                Padding="14 10">

                                <Button.Resources>

                                    <ResourceDictionary
                                        Source="ms-appx:///Resources/Controls/Buttons/BlackBackgroundTextIconButtonTheme.xaml"
                                    />

                                </Button.Resources>

                                <StackPanel
                                    Spacing="7"
                                    Orientation="Horizontal">

                                    <FontIcon
                                        Glyph="&#xE007;"
                                        Style="{StaticResource DataPageAddDataButtonFontIconStyle}"
                                    />

                                    <TextBlock
                                        Text="New Employee"
                                        Style="{StaticResource DataPageAddDataButtonTextBlockStyle}"
                                    />

                                </StackPanel>

                            </Button>

                        </StackPanel>

                    </Grid>

                </Grid>

