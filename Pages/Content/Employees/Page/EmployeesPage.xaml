                                <ResourceDictionary.MergedDictionaries>

                                    <ResourceDictionary
                                        Source="ms-appx:///Resources/Controls/Buttons/WhiteForegroundTextButton.xaml"
                                    />

                                </ResourceDictionary.MergedDictionaries>

                                <Style
                                    TargetType="Button"
                                    BasedOn="{StaticResource DefaultButtonStyle}">

                                    <Setter
                                        Property="FontFamily"
                                        Value="{StaticResource DMMonoMedium}"
                                    />

                                    <Setter
                                        Property="VerticalAlignment"
                                        Value="Stretch"
                                    />

                                    <Setter
                                        Property="Margin"
                                        Value="0 3"
                                    />

                                    <Setter
                                        Property="CornerRadius"
                                        Value="4"
                                    />

                                    <Setter
                                        Property="Padding"
                                        Value="14 0"
                                    />

                                </Style>

                            </ResourceDictionary>

                        </Grid.Resources>

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition
                                Width="Auto"
                            />

                            <ColumnDefinition
                                Width="Auto"
                            />

                            <ColumnDefinition
                                Width="Auto"
                            />

                            <ColumnDefinition
                                Width="Auto"
                            />

                        </Grid.ColumnDefinitions>

                        <Button
                            Click="Pay_Click"
                            Grid.Column="1"
                            IsEnabled="{x:Bind viewModel.CanDeleteEmployees, Mode=OneWay}"
                            Content="Pay"
                        />

                        <Button
                            Click="PayAll_Click"
                            Content="Pay All"
                        />

                        <Border
                            Width="1"
                            Grid.Column="2"
                            Background="{StaticResource WhiteColor40}"
                            Margin="0 14"
                        />

                        <Button
                            Grid.Column="3"
                            Click="EditEmployee_Click"
                            IsEnabled="{x:Bind viewModel.CanDeleteEmployees, Mode=OneWay}"
                            Content="Edit"
                        />

                    </Grid>

                </Border>

