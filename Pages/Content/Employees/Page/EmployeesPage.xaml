                                    <TextBlock
                                        Text="{x:Bind viewModel.SelectedEmployee.Email, Mode=OneWay}"
                                    />

                                    <FontIcon
                                        Grid.Row="1"
                                        Glyph="&#xE303;"
                                    />

                                    <TextBlock
