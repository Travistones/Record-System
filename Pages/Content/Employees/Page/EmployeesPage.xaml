                                        Grid.Row="5"
                                        Glyph="&#xEACA;"
                                    />

                                    <TextBlock
                                        Grid.Row="5"
                                        Text="{x:Bind viewModel.SelectedEmployee.SalaryPerMonth, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"
                                    />

