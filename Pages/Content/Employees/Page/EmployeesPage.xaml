                    </SplitView.Pane>

                    <SplitView.Content>

                        <GridView
                            Padding="90 21 90 14"
                            SelectionMode="Single"
                            IsMultiSelectCheckBoxEnabled="False"
                            SelectionChanged="EmployeesGridView_SelectionChanged"
                            ItemsSource="{x:Bind viewModel.EmployeesViewModel.Employees, Mode=OneWay}"
                            x:Name="EmployeesGridView">

                            <GridView.ItemTemplate>

                                <DataTemplate
                                    x:DataType="data:Employee">

                                    <Grid
                                        MinWidth="200"
                                        RowSpacing="7"
                                        Margin="14">

                                        <Grid.RowDefinitions>

                                            <RowDefinition
                                                Height="Auto"
                                            />

                                            <RowDefinition
                                                Height="Auto"
                                            />

                                            <RowDefinition
                                                Height="Auto"
                                            />

                                        </Grid.RowDefinitions>

                                        <Grid
                                            CornerRadius="70"
                                            Width="140"
                                            Height="140"
                                            HorizontalAlignment="Center">

                                            <FontIcon
                                                Glyph="&#xEB06;"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource SystemFluentIcons}"
                                                FontSize="118"
                                                Foreground="{StaticResource BlackColor}"
                                                Visibility="{x:Bind HasNoProfilePicture, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                            />

                                            <Image
                                                CacheMode="BitmapCache"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Stretch="UniformToFill"
                                                Source="{x:Bind ProfilePictureDownloadUrl, Mode=OneWay}"
                                                Visibility="{x:Bind HasProfilePicture, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                            />

                                        </Grid>

                                        <TextBlock
                                            Grid.Row="1"
                                            FontSize="14"
                                            FontFamily="{StaticResource DMMonoRegular}"
                                            Text="{x:Bind FullName, Mode=OneWay}"
                                            HorizontalAlignment="Center"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap"
                                            MaxLines="2"
                                        />

                                        <TextBlock
                                            Grid.Row="2"
                                            Text="{x:Bind SalaryPerMonth, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"
                                            FontFamily="{StaticResource AudioWide}"
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            TextTrimming="CharacterEllipsis"
                                        />

                                    </Grid>

                                </DataTemplate>

                            </GridView.ItemTemplate>

                            <GridView.ItemContainerStyle>

                                <Style
                                    TargetType="GridViewItem"
                                    BasedOn="{StaticResource DefaultGridViewItemStyle}">

                                    <Setter
                                        Property="HorizontalAlignment"
                                        Value="Center"
                                    />

                                    <Setter
                                        Property="Margin"
                                        Value="0 0 14 14"
                                    />

                                    <Setter
                                        Property="HorizontalContentAlignment"
                                        Value="Center"
                                    />

                                    <Setter
                                        Property="Template">

                                        <Setter.Value>

                                            <ControlTemplate
                                                TargetType="GridViewItem">

                                                <ListViewItemPresenter
                                                    DoubleTapped="Employee_DoubleTapped"
                                                    HorizontalContentAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    SelectionCheckMarkVisualEnabled="False"
                                                    Background="{StaticResource BlackColor5}"
                                                    PointerOverBackground="{StaticResource BlackColor10}"
                                                    PressedBackground="{StaticResource BlackColor20}"
                                                    SelectedBackground="{StaticResource BlackColor20}"
                                                    SelectedPointerOverBackground="{StaticResource BlackColor20}"
                                                    SelectedPressedBackground="{StaticResource BlackColor10}"
                                                    Foreground="{StaticResource BlackColor70}"
                                                    PointerOverForeground="{StaticResource BlackColor70}"
                                                    SelectedForeground="{StaticResource BlackColor70}"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                />

                                            </ControlTemplate>

                                        </Setter.Value>

                                    </Setter>

                                </Style>

                            </GridView.ItemContainerStyle>

                        </GridView>

                    </SplitView.Content>
                
                </SplitView>

            </Grid>

        </SplitView.Content>

    </SplitView>

</Page>

    