                        />

                        <RowDefinition
                            Height="Auto"
                        />

                        <RowDefinition
                            Height="Auto"
                        />

                    </Grid.RowDefinitions>

                    <TextBlock
                        Style="{StaticResource DataPageHeaderTextBlockStyle}"
                        Text="Employees"
                    />

                    <TextBlock
                        Text="{x:Bind viewModel.EmployeesViewModel.TotalSalary, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"
