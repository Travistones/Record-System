                                        Glyph="&#xE945;"
                                    />
                                    
                                    <TextBlock
                                        Grid.Row="2"
                                        Text="{x:Bind viewModel.SelectedEmployee.Location, Mode=OneWay}"
                                    />

                                    <FontIcon
                                        Grid.Row="3"
                                        Glyph="&#xE7B1;"
                                    />
                                    
                                    <TextBlock
                                        Text="{x:Bind viewModel.SelectedEmployee.BirthDate, Converter={StaticResource DateTimeToDisplayDateTimeConverter}, Mode=OneWay}"
                                        Grid.Row="3"
                                    />

                                    <FontIcon
                                        Grid.Row="4"
                                        Glyph="&#xE2D7;"
                                    />
                                    
                                    <TextBlock
                                        Text="{x:Bind viewModel.SelectedEmployee.DateJoined, Converter={StaticResource DateTimeToDisplayDateTimeConverter}, Mode=OneWay}"
